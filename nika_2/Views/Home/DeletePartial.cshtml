

<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
                <button type="button" class="btn-close" style="background-color: none; border: none;" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p style="font-size: 16px">Are You sure Delete?</p>
            </div>
            <div class="modal-footer">
                <button style="background: none; color: black; border: none;" type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                 <a asp-action="DeleteShelve" asp-route-id="@Model.Id" id="delete"  style="text-decoration: none; font-size: 20px">Delete</a>
            </div>
        </div>
    </div>
</div>